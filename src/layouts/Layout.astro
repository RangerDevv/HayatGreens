---
interface Props {
  title: string;
}

const { title } = Astro.props;

// import the locomotive-scroll css
import "locomotive-scroll/dist/locomotive-scroll.css";
import LayoutNoScroll from "./LayoutNoScroll.astro";
---

<script>
  import LocomotiveScroll from "locomotive-scroll";

  const container = document.querySelector(
    "[data-scroll-container]"
  ) as HTMLElement;

  onload = () => {
    const scroll = new LocomotiveScroll({
      el: container,
      smooth: true,
      lerp: 0.1,
    });
    scroll;
  };
</script>

<html lang="en">
	<LayoutNoScroll title="{title}">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="w-screen h-16 flex flex-row justify-center text-white text-xl fixed z-50 py-2" id="nav">
			<div class="flex flex-row gap-10 flex-1 pl-10 text-2xl pt-2">
				<a href="/">Hayat Greens</a>
				<a class="hidden sm:block" href="/approach">Our Approach</a>
				<a class="hidden sm:block" href="/about">Our Story</a>
				<a class="hidden sm:block" href="/documentation">Documentation Portfolio</a>
			</div>
			<a href="/order"><button class="bg-[#D6FA32] text-black px-10 h-12 rounded-full mr-2">Order Now</button></a>
		</nav>
		<slot />
	</LayoutNoScroll>
</html>
