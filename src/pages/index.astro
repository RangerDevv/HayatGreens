<style is:global>
	#backgroundVideo {
		width: 100vw;
		height: 100vh;
		object-fit: cover;
		position: fixed;
		left: 0;
		right: 0;
		top: 0;
		bottom: 0;
		z-index: -1;
		filter: brightness(0.8);
	}

	/* make the  green wall image a background image for the section1 */
	#section1Main {
		background-image: url('../assets/image/green-wall.jpeg');
		background-size: cover;
		background-position: center;
	}

	#section2Main {
		background-image: url('../assets/image/chefCookingFood.jpg');
		background-size: cover;
		background-position: center;
	}

	#section3Main {
		background-image: url('../assets/image/healthySalad.jpg');
		background-size: cover;
		background-position: center;
	}

	#section1 {
		backdrop-filter: brightness(0.6);
	}button

	/* make the overflow-y scrollbar more rounded and appealing */
	::-webkit-scrollbar {
		width: 12px;
	}

	::-webkit-scrollbar-thumb {
		background-color: #4444445b;
		border-radius: 10px;
	}

	::-webkit-scrollbar-track {
		background-color: #FFF8DA;
	}

	/* make the overflow-x scrollbar more rounded and appealing */
	::-webkit-scrollbar {
		height: 12px;
	}

</style>
